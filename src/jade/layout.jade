//- Basic layout of any document

doctype html

html
  head
    meta(charset="UTF-8")
    //- Always normalize the browser
    link(type="text/css" rel="stylesheet" href='https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.2/normalize.min.css')
    //- Always include bootstrap
    link(type="text/css" rel="stylesheet" href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/css/bootstrap.min.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    block head
      include ./includes/head.jade
  body
    block header

    .container-fluid
      block content

    footer
      block footer
        include ./includes/footer.jade

    block scripts
