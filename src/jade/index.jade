  header(data-spy="affix"  data-offset-top="40" class="affix-top")
    .background
      div
    .content
      nav
        ul
          li
            a(href="#O-mne")
              span(data-title="O mně") O mně
          li
            a(href="#Kniha")
              span(data-title="Kniha") Kniha
          li
            a(href="#Galerie")
              span(data-title="Galerie") Galerie
          li
            a(href="#Chystane-akce")
              span(data-title="Chystané akce") Chystané akce
          li
            a(href="#Clanky")
              span(data-title="Články") Články
          li
            a(href="#Blog")
              span(data-title="Blog") Blog
          li
            a(href="#Kontakt")
              span(data-title="Kontakt") Kontakt
